<div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3>Nuevo Producto</h3>
                    <p>Puede cargar su nuevo producto!</p>
                    <form class="requires-validation" action="/api/productos" method="POST">
                        <div class="col-md-12">
                            <input class="form-control" type="text" name="title" placeholder="Titulo del Producto">
                        </div>

                        <div class="col-md-12">
                            <input class="form-control" type="number" name="price" placeholder="Ingrese el precio">
                        </div>

                        <div class="col-md-12">
                            <input class="form-control" type="text" name="thumbnail" placeholder="Ingrese URL de la imagen">
                        </div>
                        <div class="form-button mt-3">
                            <button id="submit" type="submit" class="btn btn-primary" >Enviar</button>
                            <a href="./productos">Lista de Productos</a>
                        </div>
                    </form>
                            <button class="btn btn-danger my-5" onclick="logout()">LOGOUT</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    function redireccionar(pagina) {
        location.href = pagina;
    } 

    function load() {
        redireccionar('/api/load')
    }
    function logout() {
        console.log('logout');
        redireccionar('/api/logout')
    }
</script>